<?xml version="1.0" encoding="UTF-8" ?>


<suite name="用户管理系统测试">

    <test name="TestUser">

        <classes>
            <class name="com.test.testcase.LoginTest">
                <method>
                    <include name="loginTrue"/>
                    <include name="loginFalse"/>
                </method>
            </class>

            <class name="com.test.testcase.GetUserInfoTest">
                <method>
                    <include name="getUserInfo"/>
                </method>
            </class>
            <class name="com.test.testcase.AddUserTest">
                <method>
                    <include name="addUser"/>
                </method>
            </class>
            <class name="com.test.testcase.GetUserListTest">
                <method>
                    <include name="getUserList"/>
                </method>
            </class>
            <class name="com.test.testcase.UpdateUserInfoTest">
                <method>
                    <include name="updateUserInfo"/>
                    <include name="deleteUserInfo"/>
                </method>
            </class>

        </classes>

    </test>
    <listeners>
        <listener class-name="com.test.config.ExtentTestNGIReporterListener"/>

    </listeners>

</suite>